<Window x:Class="GameOfThrones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfThrones"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
         Title="MainWindow" Height="740" Width="850" WindowStyle="SingleBorderWindow"  ResizeMode="NoResize">
    <StackPanel Margin="0,0,-6,-3">
        <Grid  Height="90" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 3 0"/>
            <TextBlock Text="Game Of Thrones" HorizontalAlignment="Center" VerticalAlignment="Top"  Foreground="DarkRed"  FontSize="50" FontWeight="ExtraBlack"/>
        </Grid>
        <Grid Height="498">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="478*"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Column="0" Grid.Row="0" Name="characterNameTextBox" TextWrapping="Wrap" ToolTip="Enter a name of character" 
                     FontSize="18" Background="#FF212427" Foreground="White" Margin="-5,0,5,0"/>

            <ListBox Name="charactersListBox" Grid.Column="0" Background="#FF212427" Foreground="White" 
                     ItemsSource="{DynamicResource ResourceKey=GotCharacters}" Margin="-5,0,5,0" Grid.Row="1">
                <ListBox.Resources>
                    <col:ArrayList x:Key="GotCharacters"></col:ArrayList>
                </ListBox.Resources>
            </ListBox>
            <WebBrowser Source="http://viewers-guide.hbo.com/game-of-thrones/season-8/episode-5/map" 
                        Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="195,0,5,0"/>
        </Grid>
    </StackPanel>
</Window>
